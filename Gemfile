source "https://ruby.taobao.org"

gem "jekyll", "~> 2.3.0" # Simple, blog-aware, static sites
gem 'redcarpet' # Discount Markdown Processor for Ruby
gem 'rake' #ruby build program with capabilities similar to make
gem 'reduce' # Ruby/CLI: minify javascript + stylesheets, lossless image optimization

gem 'rouge'
gem 'mini_magick'
gem 'jekyll-assets'
gem 'uglifier'
gem 'sass'

require 'rbconfig'
if RbConfig::CONFIG['target_os'] =~ /mswin|mingw|cygwin/i
  gem 'wdm', '>= 0.1.0'
end